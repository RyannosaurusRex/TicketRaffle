<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="net.ryanhayes.ticketraffle"
      android:versionName="1.2"
      android:minSdkVersion="1" android:versionCode="4">
    <uses-sdk android:targetSdkVersion="8" android:minSdkVersion="1"></uses-sdk>
    
    <uses-permission android:name="android.permission.INTERNET"/>
  	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>


    <application android:icon="@drawable/icon" android:label="@string/app_name" android>
        <activity android:name=".Main"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.google.ads.AdActivity"
              android:configChanges="keyboard|keyboardHidden|orientation"/>

    </application>
</manifest>